<form method="post" action="/edit/<%= @task.get(:id) %>">
  <label for="task">Task</label>
  <input type="text" name="task" placeholder="Enter your task name" value="<%= @task.get(:task) %>"><br>
  <label for="status">Status</label>
  <select name="status">
    <option value="Not Done">Not Done</option>
    <option value="Done">Done</option>
  </select><br> 
  <p>Currrently Marked as <b><i><%= @task.get(:status) %></i></b></p>
  <input type="submit" value="Add">
</form>